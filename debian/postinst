#!/bin/sh

set -e

# Source debconf library.
. /usr/share/debconf/confmodule

TMPFILE=`mktemp -t tcp-intercept`
cat /etc/default/tcp-intercept > "$TMPFILE"

db_get tcp-intercept/bind-listen
sed -i -e "s/^\s*\(BIND_LISTEN\)=.*/\1=\"$RET\"/" "$TMPFILE"

db_get tcp-intercept/bind-outgoing
sed -i -e "s/^\s*\(BIND_OUTGOING\)=.*/\1=\"$RET\"/" "$TMPFILE"

mv "$TMPFILE" /etc/default/tcp-intercept


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
